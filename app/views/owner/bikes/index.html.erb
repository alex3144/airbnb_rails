<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1> Gerer mes offres </h1>
      <hr>
    </div>
       <% @bikes.each do |bike|%>
        <div class="col-xs-12 col-md-6">
          <% if bike.photos? %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path bike.photos.first.path %>);">
          <% else %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url("");">
          <% end %>
          <div class="card-city">
            <% if bike.available == true %>
            <strong>En location</strong>
          <% else %>
            <strong>En attente</strong>
          <% end %>
          </div>
          <% if bike.user.photo %>
            <%= cl_image_tag bike.user.photo.path, crop: :fill, class: "card-avatar" %>
          <% end %>
          <div class="card-description">
          <h2 class="bike-title text-center">
            <%= bike.title %></h2>
          </div>
          <%= link_to "", bike_path(bike), class: "card-link"%>
          </div>
          <ul class="controls">
            <div class="product-controls-refuse controls-item">
              <%= link_to not_available_owner_bike_path(bike), method: :patch, id: "location_false",class: "btn btn-danger" do %>
                <i class="fa fa-times" aria-hidden="true">Retirer de la location </i>
            <% end %>
            </div>

            <div class="product-controls-accept controls-item">
              <%= link_to available_owner_bike_path(bike), method: :patch, id: "location_good", class: "btn btn-success" do %>
                <i class="fa fa-check" aria-hidden="true">Mettre en location </i>
              <% end %>
            </div>
          </div>
          </ul>
      <%end%>
  </div>
</div>







