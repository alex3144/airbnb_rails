<div class="wrapper">
  <div class="pad">
    <div class="content_center">
      <h2 class="text-center">Edit your profil</h2>

      <%= simple_form_for(@user, url: profile_path) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, autofocus: true, placeholder: 'Bob' %>
          <%= f.input :last_name, autofocus: true, placeholder: 'Morane' %>
          <%= f.input :phone_number, autofocus: true, placeholder: 'example : 0650811810' %>
          <p> Add Pictures</p>
          <%= f.input :photo, as: :attachinary %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Editer votre profil", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
