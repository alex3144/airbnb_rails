<%= simple_form_for [bike, booking] do |f| %>

<div class="field">
  <div class="row">
    <div class="col-md-12">

    <%= f.input :start_date, label:"Début de location" , as: :date, start_year: Date.today.year %>
    </div>
  </div>
</div>

<div class="field">
  <div class="row">
    <div class="col-md-12">
      <%= f.input :end_date, label:"Fin de la location", as: :date, start_year: Date.today.year %>
    </div>
  </div>
</div>

<div class="field">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= f.submit "Faites votre réservation", class: "btn btn-info"  %>
      </div>
    </div>
  </div>
<% end %>


