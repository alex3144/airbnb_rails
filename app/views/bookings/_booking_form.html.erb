<div class="user_form">
  <h1>Réservez votre vélo</h1>
  <%= simple_form_for [bike, booking] do |f| %>

  <div class="row">
    <div class="col-xs-12 col-md-6 text-center">
    <%= f.input :start_date, label:"Début de location" , as: :date, html5: true %>
    </div>
    <div class="col-xs-12 col-md-6 text-center">
      <%= f.input :end_date, label:"Fin de la location", as: :date,html5: true %>
    </div>
  </div>

  <div class="row">
    <div class="text-center">
      <%= f.submit "Je réserve", class: "btn btn-danger btn_main_cta"  %>
     </div>
   </div>
  <% end %>
</div>


