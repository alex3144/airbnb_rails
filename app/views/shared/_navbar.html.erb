<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Search form -->

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->

          <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% if current_user.photo? %>
            <%= cl_image_tag current_user.photo.path , width: 30, height: 30 , class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
           <%= facebook_avatar %>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
              <%= link_to "/" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Acceuil") %>
              <% end %>
            </li>
            <li>
              <%= link_to owner_bikes_path do %>
                <i class="fa fa-bicycle"></i>  <%= t(".profile", default: "Gerer mes offres") %>
              <% end %>
            </li>
            <li>
              <%= link_to requests_path do %>
                <i class="fa fa-bicycle"></i>  <%= t(".profile", default: "Mes offres") %>
              <% end %>
            </li>
            <li>
              <%= link_to bookings_path do %>
                <i class="fa fa-bookmark-o"></i>  <%= t(".profile", default: "Mes demandes") %>
              <% end %>
            </li>
            <li>
              <%= link_to profile_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profil") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Déconnexion") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <% end %>

    <!-- Button (call-to-action) -->
    <%= link_to "AJouter votre vélo", new_owner_bike_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
       <li>
          <%= link_to "/" do %>
            <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
          <% end %>
        </li>
        <li>
          <%= link_to bookings_path do %>
            <i class="fa fa-bookmark-o"></i>  <%= t(".profile", default: "Mes demande") %>
          <% end %>
        </li>
        <li>
          <%= link_to requests_path do %>
            <i class="fa fa-bicycle"></i>  <%= t(".profile", default: "Mes location") %>
          <% end %>
        </li>
        <li>
          <%= link_to profile_path do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profil") %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Déconexion") %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

