<div class="form-bike-index form-group">
  <%= form_tag(bikes_path, method: :get, :class => 'form-inline') do %>
    <%= label_tag(:city, "City:") %>
    <%= text_field_tag(:city, @city_search, class: 'form-control bike-city-form') %>
    <%= label_tag(:kind, "Kind:") %>
    <%= select_tag(:kind, options_for_select(['', 'VTT', 'VTC'], @kind_search), class: "form-control bike-kind-form") %>
    <%= label_tag(:electric, "Electric Bikes") %>
    <%= check_box_tag(:electric, 1, @electric_search, class: "form-check-input") %>
    <%= submit_tag("Search", class: "btn btn-large btn-success btn-bike-form") %>
  <% end %>
</div>

